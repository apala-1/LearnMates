<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvQuestion1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q: How do I reset my password?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAnswer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A: To reset your password, go to the login page and click on 'Forgot Password'."
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvQuestion3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q: How do I delete my account?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvAnswer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAnswer3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A: Please contact support to initiate the account deletion process."
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvQuestion4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q: How do I update my profile picture?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvAnswer3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvAnswer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A: Navigate to your profile settings and click 'Edit Profile' to update your picture."
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvQuestion5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q: Can I recover deleted data?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvAnswer4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvAnswer5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A: Unfortunately, deleted data cannot be recovered. Please ensure you back up important information."
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvQuestion6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q: How do I contact customer support?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvAnswer5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tvAnswer6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A: You can reach customer support through the 'Help Center' in the app or via email."
            android:textSize="14sp"
            android:visibility="gone"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
